@model CookieReaders.Models.RegisterVm
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "_LayoutEmpty";
}

<form method="POST">
    <div class="row" style="align-items:center;justify-content:center;height:500px">
        <div class="col-md-12" style="width:450px;border:outset;padding:20px">
            <div style="display:flex;flex-direction:row; align-items:center;justify-content:start">

                <img src="/Content/Images/logos/logo_1.svg" style="height:50px;margin-right:30px" />
                <h1 style="justify-self: center;">Questionniaries</h1>
            </div>

            <div class="form-group">
                <label>Name</label>
                <input type="text" class="form-control" asp asp-for="Name" placeholder="Name" />
                <span style="color:red;" asp-validation-for="Name"></span>
            </div>
            <div class="form-group">
                <label>EmailAddress</label>
                <input type="text" class="form-control" asp-for="EmailAddress" placeholder="Email Address" />
                <span style="color:red;" asp-validation-for="EmailAddress"></span>
            </div>
            <div class="form-group">
                <label>Password</label>
                <input class="form-control" asp-for="Password" placeholder="Password" type="password" />
                <span style="color:red;" asp-validation-for="Password"></span>
            </div>
            <div class="form-group">
                <label>Confirm Password</label>
                <input class="form-control" asp-for="ConfirmPassword" placeholder="Confirm Password" type="password" />
                <span style="color:red;" asp-validation-for="ConfirmPassword"></span>
            </div>
            <div style="color:red;font-weight:bold">
                @Model?.Error
            </div>
            <div style="display:flex;flex-direction:row; align-items:center;justify-content:end;">
                <button class="btn btn-primary" style="margin:5px" type="submit">Register</button>
            </div>
        </div>
    </div>
</form>