@model CookieReaders.Models.LoginVm
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "_LayoutEmpty";
}

<form method="POST">
    <div class="row" style="align-items:center;justify-content:center;height:500px">
        <div class="col-md-12" style="width:450px;border:outset;padding:20px">
            <div style="display:flex;flex-direction:row; align-items:center;justify-content:start">

                <img src="/Content/Images/logos/logo_1.svg" style="height:50px;margin-right:30px" />
                <h1 style="justify-self: center;">Questionniaries</h1>
            </div>
            <div class="form-group">
                <label asp-for="EmailAddress">EmailAddress</label>
                <input id="Email_id" type="text" class="form-control" asp-for="EmailAddress" placeholder="Email Address" />
            </div>
            <div class="form-group">
                <label asp-for="Password">Password</label>
                <input id="Password_id" class="form-control" asp-for="Password" placeholder="Password" type="password" />
            </div>
            <div  style="display:flex;flex-direction:row; align-items:center;justify-content:end;">
                <button id="LogonBtn_id" class="btn btn-primary" style="margin:5px" type="submit">Login</button>
                <a asp-area="" asp-controller="Account" asp-action="Register">Register</a>
            </div>
        </div>
    </div>
</form>